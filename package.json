		"svelte-preprocess": "^6.0.1",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vercel": "^34.2.7",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
