		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/bcrypt": "^5.0.2",
		"@types/eslint": "^8.56.7",
		"@types/node": "^20.14.2",
		"autoprefixer": "^10.4.19",
		"bcrypt": "^5.1.1",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
